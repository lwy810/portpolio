<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.bookbug.mappers.boardAttachMapper">

	<select id="findByBno" parameterType="int" resultType="org.bookbug.board.vo.BoardAttachVO">
		select uuid, uploadPath, fileName, fileType, bno
		from tbl_attach
		where bno = #{bno}
	</select>
	<!--
	<select id="getOldFiles" resultType="org.nextway.domain.BoardAttachVO">
		select uuid, uploadPath, fileName, fileType, bno
		from tbl_attach
		where uploadPath = to_char(sysdate -1, 'yyyy\mm\dd')
	</select>
	-->
	<insert id="insert" parameterType="org.bookbug.board.vo.BoardAttachVO">
		insert into tbl_attach (uuid, uploadPath, fileName, fileType, bno)
		values (#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{bno})
	</insert>
	
	<delete id="delete" parameterType="String">
		delete from tbl_attach
		where uuid = #{uuid}
	</delete>
	
	<delete id="deleteAll" parameterType="int">
		delete from tbl_attach
		where bno = #{bno}
	</delete>

</mapper>